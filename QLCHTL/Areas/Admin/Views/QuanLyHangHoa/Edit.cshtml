    <div class="card-body" style="width:1200px">
        @using (Html.BeginForm("Edit", "QuanLyHangHoa", FormMethod.Post, new { @class = "text-start", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.productdetails.MaHang)
            @*<form role="form" class="text-start">*@
            <label class="form-label">Tên sản phẩm</label>
            <div class="input-group input-group-outline my-3">

                @Html.TextBoxFor(model => model.productdetails.TenHang, Model.productdetails.TenHang, new { @class = "form-control" })
                @*@Html.EditorFor(model => model.productdetails.TenHang, new { htmlAttributes = new { @class = "form-control" } })*@
                @if (@ViewBag.ERTen != null)
                {
                    <span class="badge badge-danger">@ViewBag.ERTen</span>
                }
            </div>
            @*<div class="input-group input-group-outline my-3">
                <label class="form-label">Tên sản phẩm</label>
                <input type="text" class="form-control">
            </div>*@
            <label class="form-label">Đơn vị tính</label>
            <div class="input-group input-group-outline mb-3">

                @*@Html.EditorFor(model => model.productdetails.DVT, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.productdetails.DVT, Model.productdetails.DVT, new { @class = "form-control" })
                @if (@ViewBag.ERDVT != null)
                {
                    <span class="badge badge-danger">@ViewBag.ERDVT</span>
                }
            </div>
            <label class="form-label">Giá tiền</label>
            <div class="input-group input-group-outline mb-3">

                @*@Html.EditorFor(model => model.productdetails.DVT, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.giabandetails.DonGia, Model.giabandetails.DonGia.ToString(), new { @class = "form-control" })
            </div>
            <label class="form-label">Mô tả</label>
            <div class="input-group input-group-outline mb-3">

                @*@Html.EditorFor(model => model.productdetails.MoTa, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.productdetails.MoTa, Model.productdetails.MoTa, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.productdetails.MoTa, "", new { @class = "badge badge-danger" })
            </div>
            <label class="form-label">Số lượng</label>
            <div class="input-group input-group-outline mb-3">

                <input min="1" name="productdetails.Soluong" id="Soluong" type="number" class="form-control" value="@Model.productdetails.Soluong" required>
            </div>
            <label>Trạng thái</label>
            <div class="input-group input-group-outline mb-3">
                <select class="form-control" id="TrangThai" name="productdetails.TrangThai">
                    @if (Model.productdetails.TrangThai == 0)
                    {
                        <option value="0">Chưa mở bán</option>
                    }
                    else if (Model.productdetails.TrangThai == 1)
                    {
                        <option value="1">Mở bán</option>
                    }
                    else if (Model.productdetails.TrangThai == 2)
                    {
                        <option value="2">Sắp mở bán</option>
                    }
                    <option value="0">Chưa mở bán</option>
                    <option value="1">Mở bán</option>
                    <option value="2">Sắp mở bán</option>
                </select>
            </div>
            <label class="form-label">Loại sản phẩm</label>
            <div class="input-group input-group-outline mb-3">
                @Html.DropDownListFor(model => model.productdetails.MaLoaiHang, new SelectList(ViewBag.Maloaihang, "MaLoaiHang", "TenLoaiHang", ViewBag.MaloaihangChon), new { @class = "form-control" })


            </div>
            <label class="form-label">Nhà cung cấp</label>
            <div class="input-group input-group-outline mb-3">
                @Html.DropDownListFor(model => model.productdetails.MaNCC, new SelectList(ViewBag.MaNCC, "MaNCC", "TenNCC", ViewBag.MaNCCChon), new { @class = "form-control" })

                @*@Html.DropDownList("Mahdh", null, htmlAttributes: new { @class = "form-control", @name = "productdetails.MaNCC" })
                @Html.ValidationMessageFor(model => model.productdetails.MaLoaiHang, "", new { @class = "text-danger" })*@

            </div>
            <label class="form-label">Hình ảnh</label>
            <div class="input-group input-group-outline mb-3">
                <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
                @*@Html.EditorFor(model => model.ImageFile, new { htmlAttributes = new { @class = "form-control" } })*@
            </div>
            <div class="text-center">
                <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Update</button>
            </div>
            @*<p class="mt-4 text-sm text-center">
                Don't have an account?
                <a href="../pages/sign-up.html" class="text-primary text-gradient font-weight-bold"></a>
            </p>*@
            @*</form>*@
        }


