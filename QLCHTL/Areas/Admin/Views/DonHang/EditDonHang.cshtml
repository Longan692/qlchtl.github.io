@model QLCHTL.Models.DONDATHANG
@{
    ViewBag.Title = "EditDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD2.cshtml";
}

<a href="~/Admin/DonHang/DonHang" class="btn btn-outline-danger" style="margin-left: 20px;"><< Quay lại</a>
<div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1" style="width:1200px">
    <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Cập nhật đơn hàng </h4>
</div>
<div class="card-body" style="width:1200px">
    @using (Html.BeginForm("EditDonHang", "DonHang", FormMethod.Post, new { @class = "text-start" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MaDonDatHang)
        @*<form role="form" class="text-start">*@
        <label class="form-label">Tên người nhận</label>
        <div class="input-group input-group-outline my-3">

            @Html.TextBoxFor(model => model.HoTenNguoiNhan, Model.HoTenNguoiNhan, new { @class = "form-control" })

        </div>
        <label class="form-label">Số điện thoại</label>
        <div class="input-group input-group-outline mb-3">
            @Html.TextBoxFor(model => model.SDT, Model.SDT, new { @class = "form-control" })

        </div>
        <label class="form-label">Địa chỉ nhận hàng</label>
        <div class="input-group input-group-outline mb-3">
            @Html.TextBoxFor(model => model.DiaChi, Model.DiaChi, new { @class = "form-control" })

        </div>
        <label class="form-label">Ghi chú đơn hàng</label>
        <div class="input-group input-group-outline mb-3">
            @Html.TextBoxFor(model => model.GhiChu, Model.GhiChu, new { @class = "form-control" })

        </div>
        <label>Trạng thái</label>
        <div class="input-group input-group-outline mb-3">
            <select class="form-control" id="TinhTrang" name="TinhTrang">
                <option value="Đang chờ duyệt">Đang chờ duyệt</option>
                <option value="Đang giao">Đang giao</option>
                <option value="Đã giao">Đã giao</option>
                <option value="Hủy đơn">Hủy đơn</option>
            </select>
        </div>
        <label>Tình trạng thanh toán</label>
        <div class="input-group input-group-outline mb-3">
            <select class="form-control" id="tinhTrangTT" name="tinhTrangTT">
                <option value="0">Chưa thanh toán</option>
                <option value="1">Đã thanh toán</option>
            </select>
        </div>


        <div class="text-center">
            <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Update</button>
        </div>
        @*<p class="mt-4 text-sm text-center">
                Don't have an account?
                <a href="../pages/sign-up.html" class="text-primary text-gradient font-weight-bold"></a>
            </p>*@
        @*</form>*@
    }


</div>
@if (@ViewBag.Success != null)
{
    <div class="alert alert-danger">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @ViewBag.Success
    </div>
}
