@model QLCHTL.Models.KHUYENMAI
@{
    ViewBag.Title = "EditKM";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD2.cshtml";
}
<a href="~/Admin/KhuyenMai/DanhSachKhuyenMai" class="btn btn-outline-danger" style="margin-left: 20px;"><< Quay lại</a>
<div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1" style="width:1200px">
    <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Cập nhật khuyến mãi </h4>
</div>
<div class="card-body" style="width:1200px">
    @using (Html.BeginForm("EditKM", "KhuyenMai", FormMethod.Post, new { @class = "text-start" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MaDotKM)
        @*<form role="form" class="text-start">*@
        <label class="form-label">Tên đợt khuyến mãi</label>
        <div class="input-group input-group-outline my-3">

            @Html.TextBoxFor(model => model.TenDotKM, Model.TenDotKM, new { @class = "form-control" })

        </div>
        <label class="form-label">Ngày bắt đầu</label>
        <div class="input-group input-group-outline mb-3">
            @*  @Html.TextBoxFor(model => model.NgayBatDau, Model.NgayBatDau.Value.ToString("dd/MM/yyyy"), new { @class = "form-control" })*@
            <input type="date" id="theDate" name="NgayBatDau" placeholder="@Model.NgayBatDau.Value.ToString("dd/MM/yyyy")" class="form-control" />
        </div>
        <label class="form-label">Địa chỉ nhận hàng</label>
        <div class="input-group input-group-outline mb-3">
            @*  @Html.TextBoxFor(model => model.NgayKetThuc, Model.NgayBatDau.Value.ToString("dd/MM/yyyy"), new { @class = "form-control" })*@
            <input type="date" id="theDate2" value="@Model.NgayKetThuc.Value.ToString("dd/MM/yyyy")" name="NgayKetThuc" class="form-control" />
        </div>
        <label>Tình trạng</label>
        <div class="input-group input-group-outline mb-3">
            <select class="form-control" id="TrangThai" name="TrangThai">
                <option value="0">Kết thúc</option>
                <option value="1">Đang khuyến mãi</option>
            </select>
        </div>
        <div class="text-center">
            <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Update</button>
        </div>
        @*<p class="mt-4 text-sm text-center">
                Don't have an account?
                <a href="../pages/sign-up.html" class="text-primary text-gradient font-weight-bold"></a>
            </p>*@
        @*</form>*@
    }


</div>
@if (@ViewBag.Success != null)
{
    <div class="alert alert-danger">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        @ViewBag.Success
    </div>
}
<script>
    $(document).ready(function () {
        var date = new Date();
        var day = date.getDate();
        var month = date.getMonth() + 1;
        var year = date.getFullYear();

        if (month < 10) month = "0" + month;
        if (day < 10) day = "0" + day;

        var today = year + "-" + month + "-" + day;
        $("#theDate").attr("value", today);
    });
    $(document).ready(function () {
        var date = new Date();
        var day = date.getDate();
        var month = date.getMonth() + 1;
        var year = date.getFullYear();

        if (month < 10) month = "0" + month;
        if (day < 10) day = "0" + day;

        var today = year + "-" + month + "-" + day;
        $("#theDate2").attr("value", today);
    });
</script>
