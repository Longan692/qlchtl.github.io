        background: #F5F1EE;
        font-family: 'Roboto', sans-serif
    }

    .card {
        width: 250px;
        border-radius: 10px
    }

    .card-img-top {
        border-top-right-radius: 10px;
        border-top-left-radius: 10px
    }

    span.text-muted {
        font-size: 12px
    }

    small.text-muted {
        font-size: 8px
    }

    h5.mb-0 {
        font-size: 1rem
    }

    small.ghj {
        font-size: 9px
    }

    .mid {
        background: #ECEDF1
    }

    h6.ml-1 {
        font-size: 13px
    }

    small.key {
        text-decoration: underline;
        font-size: 9px;
        cursor: pointer
    }

    .btn-danger {
        color: #FFCBD2
    }

        .btn-danger:focus {
            box-shadow: none
        }

    small.justify-content-center {
        font-size: 9px;
        cursor: pointer;
        text-decoration: underline
    }

    .inner {
        width: 100%;
        max-width: 960px;
        margin: 0 auto;
    }

    .p-tits {
        display: block;
        margin-bottom: 37px;
        text-align: center;
        font-size: 1.200em;
        color: #000000;
    }

    .tits {
        display: block;
        margin-bottom: 7px;
        text-align: center;
        text-transform: uppercase;
        font-size: 3.571em;
        color: #db291d;
