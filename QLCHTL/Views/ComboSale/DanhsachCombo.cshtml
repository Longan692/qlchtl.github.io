@model IEnumerable<QLCHTL.Models.COMBO>
@{
    ViewBag.Title = "DanhsachCombo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>COMBO SALE</h1>
                <nav class="d-flex align-items-center">
                    <a href="~/Home/Index">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a href="~/ComboSale/Index">Khuyến mãi</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<br />
<br />
<br />

<div class="inner">
    <!-- TIT -->
    <h3 class="tits">Khuyến mãi đặt biệt</h3>
    <p class="p-tits">Chúng tôi luôn mang đến cho bạn những chương trình ưu đãi mới, đặc biệt, hấp dẫn và thú vị, <br> từ các Chương Trình Khuyến Mãi Tháng, Giá Rẻ Mỗi Ngày đến các combo ăn uống mà bạn không thể bỏ qua.</p>
</div>
<div class="container-fluid d-flex justify-content-center">
    <div class="row mt-5">
        @foreach (var item in Model)
        {
            <div class="col-sm-4" style="width: 250px; margin-left: 150px; text-align: center;margin-top:60px">

                <div class="card">
                    <img src="/@item.AnhBia" class="card-img-top">
                    <div class="card-body pt-0 px-0">
                        <div class="d-flex flex-row justify-content-between mb-0 px-3">

                        </div>
                        <div class="product_sale">
                            <span>- @item.TyLeKM%</span>
                        </div>
                        <hr class="mt-2 mx-3">
                        <div class="d-flex flex-row justify-content-between px-3 pb-4">
                            <div class="d-flex flex-column" style="text-align:center"><span class="text-muted" style=" font-size: 20px;  font-weight: bold">@item.TenCB</span></div>

                        </div>
                        <div class="mx-3 mt-3 mb-2"><button type="button" class="btn btn-danger btn-block">@Html.ActionLink("Chi tiết", "ChitietCombo", new { @id = item.MaCombo.Trim() }, new { @style = "color:white;" })</button></div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<br />
<br />
<br />
<br />
<br />
<br />
<br />
