
@{
    ViewBag.Title = "Register";

    Layout = null;
}
@model QLCHTL.Models.User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    v  <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.ico">

    <!-- CSS
    ========================= -->
    <!-- Plugins CSS -->
    <link rel="stylesheet" href="/assets/css/plugins.css">

    <!-- Main Style CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/SignUp.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card card-signin flex-row my-5">
                    <div class="card-img-left d-none d-md-flex">
                        <!-- Background image for card set in CSS! -->
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center">Đăng ký thành viên</h5>
                        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                    <form class="form-signin">
                        <div class="form-label-group">
                            @*<input type="text" id="inputUserame" class="form-control" placeholder="Username" required autofocus >
            <label for="inputUserame">Username</label>*@
                            @Html.TextBoxFor(m => m.FullName, "", new { @class = "form-control", @placeholder = "First Name", @id = "inputFullName" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "badge badge-danger" })
                            <label for="inputFullName">Họ và tên</label>

                        </div>

                        <div class="form-label-group">
                            @*<input type="email" id="inputEmail" class="form-control" placeholder="Email address" required>*@

                            @Html.TextBoxFor(m => m.Phone, "", new { @class = "form-control", @placeholder = "Phone", @id = "inputPhone" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "badge badge-danger" })
                            <label for="inputPhone">Số điện thoại</label>
                        </div>

                        <div class="form-label-group">

                            @Html.TextBoxFor(m => m.Address, "", new { @class = "form-control", @placeholder = "Address", @id = "inputAdress" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "badge badge-danger" })
                            <label for="inputAdress">Địa chỉ</label>
                        </div>
                        <div class="form-label-group">
                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email", @id = "inputEmail" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                            <label for="inputEmail">Email</label>
                            @if (ViewBag.error != null)
                            {
                                <span class="badge badge-danger">@ViewBag.error</span>
                            }

                        </div>
                        <hr>

                        <div class="form-label-group">
                            @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "UserName", @id = "inputUserName" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "badge badge-danger" })
                            <label for="inputUserName">Tên đăng nhập</label>
                        </div>
                        <div class="form-label-group">

                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @id = "inputPassword" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
                            <label for="inputPassword">Password</label>
                        </div>

                        <div class="form-label-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confim Password", @id = "inputConfirmPassword" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "badge badge-danger" })
                            <label for="inputConfirmPassword">Confirm password</label>
                        </div>
                        
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Đăng ký</button>
                        <a class="d-block text-center mt-2 small">Bạn đã có tài khoảng</a>
                        <hr class="my-4">

                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"> Đăng nhập</button>
                        @*<button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign up with Google</button>
        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign up with Facebook</button>*@
                    </form>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>

